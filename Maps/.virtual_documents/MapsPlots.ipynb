def km_per_degree_longitude(latitude):
    # Radius of the Earth in kilometers
    R = 6371.0
    # Convert latitude to radians
    lat_rad = np.radians(latitude)
    # Calculate km per degree of longitude
    return np.pi * R * np.cos(lat_rad) / 180

